<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_nothing_feima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/view_marg_right"
            android:layout_centerVertical="true"
            android:layout_marginTop="22dp"
            android:src="@mipmap/ic_expound" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_marg_right"
            android:layout_marginRight="@dimen/view_marg_right"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_reson_feione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="收到过"
                    android:ems="14"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/txt_shenma_left"
                    android:textSize="@dimen/txt_content_middle" />

                <ImageView
                    android:id="@+id/img_biaoshi_feima"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"

                android:layout_marginRight="@dimen/view_marg_right"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请时间:"
                    android:textColor="@color/shuoming"
                    android:textSize="@dimen/txt_content_middle" />

                <TextView
                    android:id="@+id/txt_time_feione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/shuoming"
                    android:textSize="@dimen/txt_content_middle" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
