<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/view_marg_right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/view_marg_right"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_one_nothing"
                android:layout_width="wrap_content"
                android:text="商品名称:"
                android:textSize="@dimen/txt_content_middle"
                android:textColor="@color/txt_shenma_left"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_name_gaione"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/txt_content_middle"
                android:textColor="@color/txt_shenma_left"
                android:layout_toRightOf="@+id/txt_one_nothing"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_gaione"
                android:layout_width="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/view_marg_right"
            android:layout_marginRight="@dimen/view_marg_right"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="商品编码:"

                android:textSize="@dimen/txt_content_middle"
                android:textColor="@color/shuoming"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_scode_gaione"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/txt_content_middle"
                android:textColor="@color/shuoming"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/view_marg_right"
            android:layout_marginRight="@dimen/view_marg_right"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="申请时间:"

                android:textSize="@dimen/txt_content_middle"
                android:textColor="@color/shuoming"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_time_gaione"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/txt_content_middle"
                android:textColor="@color/shuoming"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
