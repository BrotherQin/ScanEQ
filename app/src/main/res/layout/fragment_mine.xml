<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/lin_all_bg"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/img_inmg"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/image_2_bg"
    android:layout_height="250dp">
<TextView
    android:layout_width="match_parent"
    android:text="个人中心"
    android:gravity="center_horizontal"
    android:layout_marginTop="30dp"
    android:textColor="@color/white"
    android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:background="@mipmap/ic_headportrait"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_nickname"
        android:layout_width="match_parent"
        android:text="中华老字号酱香酒"
        android:gravity="center_horizontal"
android:textSize="@dimen/txt_content_middle"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="厂商名称:"

            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_factorname"
            android:layout_width="wrap_content"
            android:text="贵州林和就业有限公司"

            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_changepaaword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="修改密码"
            android:textColor="@color/black_dongqing" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_getinto" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/view_marg_right"
        android:layout_marginRight="@dimen/view_marg_right"
        android:layout_height="0.5dp">

    </View>
    <RelativeLayout
        android:id="@+id/rel_tuichu_mine"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="退出"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black_dongqing"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:background="@mipmap/ic_getinto"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/view_marg_right"
        android:layout_marginRight="@dimen/view_marg_right"
        android:layout_height="0.5dp">

    </View>
</LinearLayout>
