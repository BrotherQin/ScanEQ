<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="退出"
        android:gravity="center_horizontal"
        android:textSize="@dimen/txt_content_big"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="你确定退出登录"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/txt_content_middle"
        android:textColor="@color/black_dongqing"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@color/black_dongqing"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="@dimen/realyout_hegit_title">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/txt_content_middle"
            android:textColor="@color/black_dongqing"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:background="@color/black_dongqing"
            android:layout_height="match_parent"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/txt_content_middle"
            android:textColor="@color/black_dongqing"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
