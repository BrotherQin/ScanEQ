<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/image_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="批次编号:"
                    android:textColor="@color/txt_shenma_left"
                    android:textSize="@dimen/txt_content_small" />

                <TextView
                    android:id="@+id/txt_pici_code_item_gaima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="00000"
                    android:textColor="@color/txt_shenma_left"
                    android:textSize="@dimen/txt_content_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="页码:"
                    android:textColor="@color/shuoming"
                    android:textSize="@dimen/txt_content_smallest" />

                <TextView
                    android:id="@+id/txt_page_item_gaima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0000"
                    android:textColor="@color/shuoming"
                    android:textSize="@dimen/txt_content_smallest" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="数量:"
                    android:textColor="@color/shuoming"
                    android:textSize="@dimen/txt_content_smallest" />

                <TextView
                    android:id="@+id/txt_nums_item_gaima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="000"
                    android:textColor="@color/shuoming"
                    android:textSize="@dimen/txt_content_smallest" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
